<%= simple_form_for(@course_module) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>

    <%= f.input :unlocks_in_number, required: true, label: 'Unlocks in...' %>
    <%= f.input :unlocks_in_unit, collection: %w(days weeks months), required: true, include_blank: false, label: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
