<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : SiteConfig.site_name %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Membershipapp" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div class="header">
    	<div class="header_container">
          <h1><%= link_to SiteConfig.site_name, root_path, :class => 'brand' %></h1>
          <%= render 'layouts/navigation' %>
        </div>
    </div>
      <div class="container">
              <%= render 'layouts/messages' %>
              <%= yield %>
      </div> <!--! end of .container -->
  </body>
</html>
